<% @reviews.each do |review| %>
  <div class="reviews">
  	<div class="active item">
      <blockquote>
        <span class="reviews-writer"><strong><%= review.user.first_name %></strong> Rating: <%= review.rating %></span>
        <p>
          <%= review.body %>
        </p>
        <a class="btn btn-sm btn-danger"data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/stores/<%= review.store_item.store_id %>/items/<%= review.store_item.item_id %>/reviews/<%= review.id %>">Delete</a>
      </blockquote>
    </div>
  </div>
<% end %>
