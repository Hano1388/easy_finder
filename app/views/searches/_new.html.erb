<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLabel">New Search</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @search, method: :post do |f| %>

          <div class="form-group">
            <%= f.input :keywords, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.association :category, include_blank: true, prompt: 'Choose a category' %>
          </div>

          <div class="form-group">
            <%= f.input :min_price, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.input :max_price, class: "form-control" %>
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        <%= f.submit "Search", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
