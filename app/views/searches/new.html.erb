<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#searchModal" data-whatever="@mdo">Advanced Search</button>
<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLabel">New Search</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @search do |f| %>
        <form>

          <div class="form-group">
            <%= f.label :keywords, class: "form-control-label" %>
            <%= f.text_field :keywords, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :category_id, class: "form-control-label" %>
            <%= f.collection_select :category_id,
                                    Category.order(:name),
                                    :id, :name,
                                    include_blank: true,
                                    class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :min_price, class: "form-control-label" %>
            <%= f.text_field :min_price, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :max_price, class: "form-control-label" %>
            <%= f.text_field :max_price, class: "form-control" %>
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        <%= f.submit "Search", class:"btn btn-primary" %>
      </div>
    </form>
      <% end %>
    </div>
  </div>
</div>
