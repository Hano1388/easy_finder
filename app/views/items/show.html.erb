<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="row">
        <br />
        <a href="#"><%= @store.name %></a> / <a href="#"></%><%= @item.category.name %></a> / <a href="#"><%= @item.name %></a>

        <div class="picture"><img class="img-responsive" src="http://www.coghlans.com/images/products/products-camp-kitchen-thumb.jpg" style="width: 80%; height: 300px;" alt="#"></div>
        <h3 style="text-align: center;">Price: <%= number_to_currency(@item.price) %></h3>
      </div>
    </div>
    <div class="col-md-5">
      <div class="row">
        <div class="about-content">
          <div class="row" style="border: inset #2874b4;">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding: 0px">
              <img class="img-responsive" src="http://www.tiki-international.com/projects/data1/images/superstore2.jpg" style="width: 100%; height: 150px;" alt="#">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding: 0px">
              <img class="img-responsive" src="https://static.bhphoto.com/images/areaMapImg.png" style="width: 100%; height: 150px;" alt="#">
            </div>
          </div>
          <h3 class="content-title" style="color: #2874b4;">
            <strong>
              <%= @store.name %>
            </strong>
            <button class="btn btn-primary pull-right">Directions</button>
            <button class="btn btn-primary pull-right" style="margin-right: 5px;">Website</button>
          </h3> <hr />
          <h5><strong>Address: </strong><%= @store.full_address %></h5>
          <h5><strong>Phone: </strong>(700) 233-4343</h5> <hr />

          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding: 0px">
              <h3><%= @item.name %></h3>
              <h3>Price: <%= number_to_currency(@item.price) %></h3>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding: 0px">
              Find <%= @item.name %> at:
              <h5>
                <table class="table table-responsive">
                  <thead>
                    <tr>
                      <th style="text-align: center;">Aisle</th>
                      <th style="text-align: center;">Row</th>
                      <th style="text-align: center;">Shelf</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td style="border: groove #2874b4; text-align: center; background-color: whitesmoke;"><strong><%= @itemsShelf.row.aisle.aisle_number %></strong></td>
                      <td style="border: groove #2874b4; text-align: center; background-color: whitesmoke;"><strong><%= @itemsShelf.row.row_number %></strong></td>
                      <td style="border: groove #2874b4; text-align: center; background-color: whitesmoke;"><strong><%= @itemsShelf.shelf_number %></strong></td>
                    </tr>
                </table>
              </h5>
            </div>
          </div>

          <p>
            <%= @item.description %>
          </p>
        </div>
      </div>
    </div>
  </div><hr>
</div>

<div class="container">
  <h3 style="text-align: center">Reviews</h3>
  <div class="row">

  </div>
</div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
markers = handler.addMarkers([
  {
    "lat": <%= @store.latitude %>,
    "lng": <%= @store.longitude %>,
    "picture": {
      "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
      "width":  32,
      "height": 32
    },
    "infowindow": "hello!"
  }
]);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
handler.getMap().setZoom(15);
});
</script>
