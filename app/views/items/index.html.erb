<div class="container">
  <div class="row">
    <%= form_tag items_path, :method => 'get', class: 'input-group'  do %>
      <%= text_field_tag :search, params[:search], class: 'form-control search-field', placeholder: 'Search for an item...' %>
      <span class="input-group-btn">
        <%= submit_tag "search", class: "btn btn-default search-button" %>
      </span>
      <span class="input-group-btn">
        <%= link_to "Advanced Search", new_search_path, class: "btn btn-default search-button" %>
      </span>
    <% end %>
  </div>
    <hr />

    <%= render 'items' %>
</div>
